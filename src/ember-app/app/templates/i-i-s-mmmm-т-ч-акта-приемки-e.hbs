<h3 class="ui header">{{t "forms.i-i-s-mmmm-т-ч-акта-приемки-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерПозиции
      class=(if (v-get validationModel "номерПозиции" "isInvalid") "error")
      label=(t "forms.i-i-s-mmmm-т-ч-акта-приемки-e.номерПозиции-caption")
      data-test-i-i-s-mmmm-т-ч-акта-приемки-e-номерПозиции=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерПозиции" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-mmmm-т-ч-акта-приемки-e.актПриемки-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.актПриемки
      displayAttributeName="датаПриемки"
      autocomplete=true
      relationName="актПриемки"
      projection="АктПриемкиL"
      title=(t "forms.i-i-s-mmmm-т-ч-акта-приемки-e.актПриемки-caption")
      readonly=readonly
      componentName="актПриемкиLookup"
      class=(if (v-get validationModel "актПриемки" "isInvalid") "error")
      data-test-i-i-s-mmmm-т-ч-акта-приемки-e-актПриемки=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "актПриемки" "message")}}
  </div>
</form>
